@using Services.Metrics.Models;

<div class="card border-primary">
  <div class="card-header  ">
    <div class="row no-gutters">
      <div class="col">
        <NodeView.Components.NetworkState />
      </div>
      <div class="col">      
          <NodeView.Components.Actions actions="@actions" />
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col">
          <NodeView.Components.Triples triples="@triples" />
      </div>
    </div>
    <div class="row">
      <div class="col">
          <NodeView.Components.Performance />
      </div>
    </div>
  </div>
</div>

@code {
    [Parameter]
    public List<ActiveActions>? actions { get; set; }
  
    [Parameter]
    public List<NodeTripleCount>? triples { get; set;}
        
}